<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <f:section title="Karotz settings">
    <f:entry title="Api key" field="apiKey">
      <f:textbox />
    </f:entry>
    <f:entry title="Secret" field="secretKey">
      <f:textbox />
    </f:entry>
    
    <f:entry title="Installation IDs">
	 <f:repeatable items="${descriptor.installations}" var="installId">
	 	<table width="100%">
		 	<f:entry title="ID">
		      <f:textbox name="id" value="${installId}"/>
		    </f:entry>
  		</table>
  		<div align="right">
  			<f:repeatableDeleteButton/>
		</div>
	 </f:repeatable>
	 </f:entry>
  </f:section>
</j:jelly>
